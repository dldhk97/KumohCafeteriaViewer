<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_big_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_black_background"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_big_textView_cafeteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_big_textView_cafeteria"
            android:textAlignment="viewEnd"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_big_textView_title_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_big_textView_title_breakfast_text"
                android:textAlignment="center"
                android:textColor="@color/widget_black_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_big_textView_title_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_big_textView_title_lunch_text"
                android:textAlignment="center"
                android:textColor="@color/widget_black_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_big_textView_title_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_big_textView_title_dinner_text"
                android:textAlignment="center"
                android:textColor="@color/widget_black_text"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_big_textView_menus_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_big_textView_menus_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:contentDescription="@string/appwidget_text"
                android:text="@string/widget_textView_menus"
                android:textAlignment="viewStart"
                android:textColor="@color/widget_black_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_big_textView_menus_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:contentDescription="@string/appwidget_text"
                android:text="@string/widget_textView_menus"
                android:textAlignment="viewStart"
                android:textColor="@color/widget_black_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_big_textView_menus_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:contentDescription="@string/appwidget_text"
                android:text="@string/widget_textView_menus"
                android:textAlignment="viewStart"
                android:textColor="@color/widget_black_text"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>